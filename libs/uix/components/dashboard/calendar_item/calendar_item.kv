

<CalendarItem>:
    MDRelativeLayout:
        id: relative_layout
        size_hint: (1, 1)
        MDIcon:
            id: check_icon
            theme_font_size: "Custom"
            font_size: "50dp"
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primaryColor
        MDBoxLayout:
            size_hint: (1, 1)
            spacing: "5dp"
            orientation: "vertical"
            MDBoxLayout:
                id: item_header
                spacing: "5dp"
                MDLabel:
                    id: lbl_title
                    font_style: "Title"
                    role: "small"
                    text:
                        root.title if root.title is not None else ''
            MDBoxLayout:
                id: box_description
            MDBoxLayout:
                MDLabel:
                    id: lbl_duration
                    font_style: "Label"
                    role: "small"
                MDLabel:
                    id: lbl_tag
                    font_style: "Label"
                    role: "small"
                    halign: "right"
                    text:
                        root.tag if root.tag is not None else ''
