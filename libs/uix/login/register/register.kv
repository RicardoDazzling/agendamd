

<RegisterScreen>:
    orientation: "vertical"
    LoginCard:
        LoginLabel:
            text: _.bind_and_return_text(self, "Register")
        LoginTextField:
            id: tf_name
            next: tf_email
            MDTextFieldLeadingIcon:
                icon: "account-details-outline"
            MDTextFieldHintText:
                text: _.bind_and_return_text(self, "Name")
            MDTextFieldHelperText:
                id: help_name
                mode: "persistent"
        LoginTextField:
            id: tf_email
            next: tf_password
            MDTextFieldLeadingIcon:
                icon: "email-outline"
            MDTextFieldHintText:
                text: _.bind_and_return_text(self, "Email")
            MDTextFieldHelperText:
                id: help_email
                mode: "persistent"
        LoginPasswordTextField:
            id: tf_password
            next: btn_form
            MDTextFieldLeadingIcon:
                icon: "account-key-outline"
            MDTextFieldHintText:
                text: _.bind_and_return_text(self, "Password")
            MDTextFieldHelperText:
                id: help_password
                mode: "persistent"
            MDTextFieldMaxLengthText:
                max_text_length: 32
        LoginFormButton:
            id: btn_form
            on_release:
                root.register(tf_name, help_name, tf_email, help_email, tf_password, help_password)
            MDButtonText:
                text: _.bind_and_return_text(self, "Register")
                pos_hint: {"center_x": .5, "center_y": .5}
        KLCheckbox:
            id: cb_keep
    LoginTextButton:
        on_release: root.goto_login()
        MDButtonText:
            text: _.bind_and_return_text(self, "Already registered?")
