

<LoginScreen>:
    orientation: "vertical"
    LoginCard:
        LoginLabel:
            text: _.bind_and_return_text(self, "Login")
        LoginTextField:
            id: tf_email
            next: tf_password
            MDTextFieldHintText:
                text: _.bind_and_return_text(self, "Email")
            MDTextFieldLeadingIcon:
                icon: "email-outline"
            MDTextFieldHelperText:
                id: help_email
                mode: "persistent"
        LoginPasswordTextField:
            id: tf_password
            next: btn_form
            MDTextFieldHintText:
                text: _.bind_and_return_text(self, "Password")
            MDTextFieldLeadingIcon:
                icon: "account-key-outline"
            MDTextFieldHelperText:
                id: help_password
                mode: "persistent"
            MDTextFieldMaxLengthText:
                max_text_length: 32
        LoginFormButton:
            id: btn_form
            on_release:
                root.login(tf_email, help_email, tf_password, help_password)
            MDButtonText:
                text: _.bind_and_return_text(self, "Login in")
                pos_hint: {"center_x": .5, "center_y": .5}
        KLCheckbox:
            id: cb_keep
    LoginTextButton:
        on_release: root.goto_register()
        MDButtonText:
            text: _.bind_and_return_text(self, "Not registered?")
