

<HomeScreen>:
    MDBoxLayout:
        size: root.size
        pos: root.pos
        spacing: "20dp"
        MDNavigationRail:
            id: nav_rail
            type: "unselected"
            theme_bg_color: 'Custom'
            md_bg_color: app.theme_cls.surfaceContainerLowestColor
            MDNavigationRailItem:
                id: dashboard_item
                on_active: root._goto('dashboard', *args)
                MDNavigationRailItemIcon:
                    icon: "view-dashboard"
            MDNavigationRailItem:
                id: list_item
                on_active: root._goto('list', *args)
                MDNavigationRailItemIcon:
                    icon: "list-box-outline"
            MDNavigationRailItem:
                id: inbox_item
                on_active: root._goto('inbox', *args)
                MDNavigationRailItemIcon:
                    icon: "inbox-outline"
            MDNavigationRailItem:
                id: config_item
                on_active: root._goto('config', *args)
                MDNavigationRailItemIcon:
                    icon: "cog-outline"
        MainScreenManager:
            id: screen_manager
