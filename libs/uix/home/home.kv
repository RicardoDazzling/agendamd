

<Home>:
    MDBoxLayout:
        size: root.size
        pos: root.pos
        spacing: "20dp"
        MDNavigationRail:
            id: nav_rail
            type: "unselected"
            MDNavigationRailItem:
                id: dashboard_item
                on_active: root.goto_dashboard(*args)
                MDNavigationRailItemIcon:
                    icon: "view-dashboard"
            MDNavigationRailItem:
                id: list_item
                on_active: root.goto_task(*args)
                MDNavigationRailItemIcon:
                    icon: "list-box-outline"
            MDNavigationRailItem:
                id: inbox_item
                on_active: root.goto_inbox(*args)
                MDNavigationRailItemIcon:
                    icon: "inbox-outline"
        MainScreenManager:
            id: screen_manager
            Dashboard:
                name: "dashboard"
